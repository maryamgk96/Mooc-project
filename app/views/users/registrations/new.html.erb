<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :name , class: 'col-sm-2 control-label'%>
          <div class="col-sm-10">
      <%= f.text_field :name, autofocus: true , class: 'form-control' %>
      </div>
    </div>

  <div class="field form-group">
    <%= f.label :email , class: 'col-sm-2 control-label'%>
        <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control'%>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :gender , class: 'col-sm-2 control-label' %> 
       <div class="col-sm-10">
    <%= f.select :gender, User.genders.keys , class: 'form-control'%>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :date_of_birth , class: 'col-sm-2 control-label' %>
       <div class="col-sm-10">    
    <%= f.date_select :date_of_birth , class: 'form-control'%>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :profile_picture  , class: 'col-sm-2 control-label'%>
       <div class="col-sm-10">    
    <%= f.file_field :profile_picture , class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :role , class: 'col-sm-2 control-label'%>
       <div class="col-sm-10">    
  <%= f.collection_select :role, User::ROLES, :to_s, :humanize , class: 'form-control' %>
  </div>
  </div>
  <div class="field form-group">
    <%= f.label :password , class: 'col-sm-2 control-label' %>
       <div class="col-sm-10">    
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , class: 'form-control'%>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation  , class: 'col-sm-2 control-label'%>
       <div class="col-sm-10">    
    <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control' %>
    </div>
  </div>

  <div class="actions form-group">
       <div class="col-sm-10">  
    <%= f.submit "Sign up", :class=> 'btn btn-primary' %>
       </div>    
  </div>
<% end %>

<%= render "users/shared/links" %>
